@using Gestion_Administrativa_Api.Models
@{

    Facturas factura = @Model.consultaFactura;
    decimal? subtotal12 = 0;
    decimal? subtotal0 = 0;
}




<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Recibo</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>


</head>

<body>

    
    <div class="plantilla">

        <div style="text-align: center;">

            <img class="logo" src="~/Imagenes/Logos/logo.png">

        </div>



        <div class="nombreEmpresa bolder" style="margin-bottom: 7px; margin-top: 15px; font-size: 14PX;">
            @factura.EmisorRazonSocial.ToUpper()
        </div>


        <table style="width: 100%;">

            <tr>
                <td>
                    <div class="encabezado">




                        <div class="mt-1">
                            <strong class="bolder">RUC:</strong> <label>@factura.EmisorRuc</label>
                        </div>

                        <div class="mt-1">
                            <strong class="bolder">Dirección:</strong> <label>@factura.DireccionEstablecimiento</label>
                        </div>



                        <hr style="visibility: hidden;">

                        <div>
                            <strong class="bolder">Factura N.-</strong> <label>@factura.Establecimiento.ToString().PadLeft(3, '0')-@factura.PuntoEmision.ToString().PadLeft(3, '0')-@factura.Secuencial.ToString().PadLeft(3, '0')</label>
                        </div>
                        <strong class="bolder">Autorizazión SRI:</strong>
                        <div style="width: 80mm;word-wrap:break-word">@factura.ClaveAcceso</div>


                        <hr style="visibility: hidden;">

                        <div class="mt-1">
                            <strong class="bolder">Fecha:</strong> <label>@DateTime.Now.ToString("dd-MM-yyyy")</label>
                        </div>


                        <div class="mt-1">
                            <strong class="bolder">Ced/Ruc:</strong> <label>@factura.ReceptorRuc</label>
                        </div>

                        <div class="mt-1">
                            <strong class="bolder">Nombre</strong> <label>@factura.ReceptorRazonSocial</label>
                        </div>

                        <div class="mt-1">
                            <strong class="bolder">Dirección:</strong> <label>@factura.ReceptorDireccion</label>
                        </div>

                        <div class="mt-1">
                            <strong class="bolder">Telefono:</strong> <label>@factura.ReceptorTelefono</label>
                        </div>




                    </div>
                </td>
            </tr>

        </table>


        <table class="detalleTabla">

            <thead>

                <tr>
                    <th>CANT</th>
                    <th>DESCRIP</th>
                    <th>P.UNIT</th>
                    <th>TOTAL</th>
                </tr>

            </thead>

            <tbody>


                @foreach (var item in @factura.DetalleFacturas)

                {

                    <tr>

                        <td>@item.Cantidad</td>
                        <td>@item.IdProductoNavigation.Nombre</td>
                        <td>@item.Precio</td>
                        <td>@item.Total</td>
                    </tr>

                }


            </tbody>

        </table>


        <div>
        </div>




        <table style="width: 100%;" class="tablaPrincipalTotales">
            <tr>
                <td>

                    <table style="width: 100%;">

                        <tr>
                            <td class="bolder">FORMA PAGO:</td>
                            <label></label>

                        </tr>



                        @foreach (var item in @factura.DetalleFormaPagos)
                        {
                            <tr>
                                <td align="left" width="100">



                                    @(item.IdFormaPagoNavigation.Codigo == 1 ? "01-SIN UTILIZA" :
                                        (item.IdFormaPagoNavigation.Codigo == 16 ? "16-TARJETA DÉB" :
                                        (item.IdFormaPagoNavigation.Codigo == 17 ? "17-DINERO ELECT" :
                                        (item.IdFormaPagoNavigation.Codigo == 20 ? "20-OTROS" :
                                        (item.IdFormaPagoNavigation.Codigo == 21 ? "21-ENDOSO" :
                                        (item.IdFormaPagoNavigation.Codigo == 15 ? "15-COMPENSACIÓN" :
                                        (item.IdFormaPagoNavigation.Codigo == 19 ? "19-TARJETA CRÉD"
                                        : ""))))))

                                        )


                                </td>
                  @*               <td align="center" width="100">@item.Valor?</td> *@
                                @*<td align="center" width="100">@item.plazo</td>*@
                            </tr>

                        }

                        @*<tr>
                        <td class="bolder">DINERO ELEC</td>
                        <td>0.00</td>
                        <label></label>
                        </tr>
                        <tr>
                        <td class="bolder">TARJ CRED/DEB</td>
                        <td>0.00</td>
                        <label></label>
                        </tr>
                        <tr>
                        <td class="bolder">OTROS </td>
                        <td>0.00</td>
                        <label></label>
                        </tr>*@


                    </table>

                </td>
                <td>
                    <table style="width: 100%;">
                        <tr>
                            <td class="bolder">SUBTOTAL</td>
                            <label></label>
                            <td class="end">@factura.TotalSinImpuesto</td>
                            <label></label>
                        </tr>
                  
                        <tr>
                            <td class="bolder">IVA0%</td>
                            <td class="end">@factura.Subtotal0.Value.ToString("0.00")</td>
                            <label></label>
                        </tr>
                        <tr>
                            <td class="bolder">IVA15%</td>
                            <td class="end">@factura.Subtotal12.Value.ToString("0.00")</td>
                            <label></label>
                        </tr>
                        <tr>
                            <td class="bolder">IVA</td>

                         
                            <td class="end">@factura.Iva12</td>
                            <label></label>
                        </tr>

                        <tr>
                            <td class="bolder">TOTAL</td>
                            <td class="end" style="font-weight: bolder;">@factura.TotalImporte</td>
                            <label></label>
                        </tr>







                    </table>
                </td>
            </tr>
        </table>



        <table style="width: 50%;" class="tablaPrincipalTotales">
            <tr>



                <td>
                    <table style="width: 100%;">
                        <tr>
                            <td class="bolder">RECIBIDO</td>
                            <label></label>
                            <td class="end">@factura.ValorRecibido</td>
                            <label></label>
                        </tr>

                        <tr>
                            <td class="bolder">VUELTO</td>
                            <label></label>
                            <td class="end">@factura.Cambio</td>
                            <label></label>
                        </tr>



                    </table>
                </td>
            </tr>


        </table>
     @*    <div class="nombreEmpresa bolder" style="margin-bottom: 7px; margin-top: 15px;">
            AGENTE DE RETENCIÓN RESOLUCIÓN
            N.
        </div>
        <div class="nombreEmpresa " style="margin-bottom: 5px;">NAC-DNCRASC20-000000001</div> *@


    </div>





</body>

<style>


    .tablaPrincipalTotales {
        border: 1px solid black;
        width: 100%;
        border-top: none;
        border-left: none;
        border-right: none;
    }


    .nombreEmpresa {
        text-align: center;
    }

    .bolder {
        font-weight: bolder;
    }

    .end {
        text-align: end;
    }


    .plantilla {
        color: black;
        margin-left: auto;
        margin-right: auto;
        width: 80mm;
        height: 157mm;
        /* border: 1px solid black; */
        font-size: 12px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }

    .text7 {
        font-size: .7rem;
    }

    .mt-1 {
        margin-top: 4px;
    }



    /* .encabezado {
                    margin-left:0px;
                } */


    .detalleTabla {
        border: 1px solid black;
        width: 100%;
        border-left: none;
        border-right: none;
        margin-top: .2rem;
    }

    .bolder {
        font-weight: bolder;
    }


    .detalleTabla tbody tr {
        text-align: center;
        font-size: 12px;
    }

    .logo {
        width: 150px;
/*         height: 60px; */
        margin-top: 1rem;
    }
</style>

</html>